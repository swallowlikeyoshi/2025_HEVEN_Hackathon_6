<launch>
    <!-- 1. 가짜 시뮬레이터 실행 (트랙 및 차량 물리) -->
    <node pkg="formula" type="mock_fsds_hard.py" name="mock_simulator" output="screen" />

    <!-- 2. 사용자가 작성한 제어 노드 실행 -->
    <!-- 주의: 'my_fs_pkg'를 실제 패키지 이름으로 변경하거나, script 경로를 지정하세요 -->
    <node pkg="formula" type="control_node.py" name="control_node" output="screen" />

    <!-- Launch RViz -->
    <node name="rviz" pkg="rviz" type="rviz" args="-d $(find formula)/rviz/formula_rviz.rviz" output="screen"/>
</launch>